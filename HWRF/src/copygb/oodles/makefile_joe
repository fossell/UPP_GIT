################################################################################
$(CMD):	$(OBJS)
	mpif90 $(LOPTS) $(OBJS) $(WRFLIB) $(LIBS) $(LAPACK) -o $(CMD)
$(OBJS):	$(INCS)
copygb.o:	copygb.f
	mpif90 -c $(FOPTS) $*.f
clean:	
	-rm -f $(OBJS)
