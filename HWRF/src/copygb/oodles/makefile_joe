LAPACK= -L$(MKL) -lmkl_intel_lp64 -lmkl_intel_thread -lmkl_core -lguide
#WRFPATH= /mnt/lfs0/projects/wrfruc/mhu/save/WRF_release/WRFV3.2_intel_arw
WRFPATH= /mnt/lfs0/projects/wrfruc/olson/WRFV3.2.1
WRFLIB    = $(WRFPATH)/main/libwrflib.a \
            $(WRFPATH)/frame/pack_utils.o \
            $(WRFPATH)/external/io_int/libwrfio_int.a \
            $(WRFPATH)/external/io_netcdf/libwrfio_nf.a \
            $(WRFPATH)/external/esmf_time_f90/libesmf_time.a \
            $(WRFPATH)/external/RSL_LITE/librsl_lite.a \
            $(WRFPATH)/external/io_grib1/libio_grib1.a \
            $(WRFPATH)/external/io_grib_share/libio_grib_share.a \
            $(WRFPATH)/external/fftpack/fftpack5/libfftpack.a
LIBS= /lfs0/projects/wrfruc/olson/copygb/ip/libip_4.a \
      /lfs0/projects/wrfruc/olson/unipost/libs/libsigio_4.a \
      /lfs0/projects/wrfruc/olson/unipost/libs/libsfcio_4.a \
      /lfs0/projects/wrfruc/olson/unipost/libs/libbacio_4.a \
      /lfs0/projects/wrfruc/olson/unipost/libs/libsp_d.a \
      /lfs0/projects/wrfruc/olson/copygb/w3/w3/lib/libw3_4.a 
#      /lfs1/projects/wrfruc/alexander/code/rr/hjet/RR-svn/trunk/unipost/libs/libsigio_4.a \
#      /lfs1/projects/wrfruc/alexander/code/rr/hjet/RR-svn/trunk/unipost/libs/libsfcio_4.a \
