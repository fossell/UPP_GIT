#LDFLAGS=  -Wl,-noinhibit-exec
LDFLAGS=  -Wl -noinhibit-exec
FOPTS=	-O3 -ftz -xT -fp-model precise -assume byterecl -convert big_endian -fpe0 -traceback $(LDFLAGS) -DLINUX
LOPTS=
INCS=	
