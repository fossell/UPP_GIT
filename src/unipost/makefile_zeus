.SUFFIXES:	.F .f .o .f90

.F.f:
	$(CPP) $(CPPFLAGS) $< > $*.f

$(TARGET):	$(OBJST) $(OBJXML) $(OBJS)
	$(FC) $(LDFLAGS) -openmp -o $@ $(OBJST) $(OBJXML) $(OBJS) $(LIBS)

#$(OBJS):
#	$(FC) $(FFLAGS) -c $<

##$(OBJST):	
##	$(FC) $(FFLAGST) -c $<
.f.o:	
	$(FC) $(FFLAGS) -c $<

clean:	
	/bin/rm -f  $(TARGET) *.lst *.o *.mod
#
post_t.o:      
	$(FC) $(FFLAGS) -c post_t.f90

