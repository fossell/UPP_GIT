###########################################################
#ARCH	Linux i486 i586 i686, Intel compiler	# serial dmpar
#
SFC     = ifort
SF90    = ifort -free
SCC     = icc

DM_FC   = mpif90 -f90=$(SFC)
DM_F90  = mpif90 -f90=$(SF90)
DM_CC   = mpicc -cc=$(SCC)

FC      = CONFIGURE_FC
F90     = CONFIGURE_F90
CC      = CONFIGURE_CC
CPP     = /lib/cpp

FDEBUG  = -g -traceback
CDEBUG  =

LINUX_OBJ  =
BYTE_ORDER = LITTLE_ENDIAN
FFLAGS_I8R8   = -i8 -r8
FFLAGS_I4R8   = -i4 -r8
FFLAGS_I4R4   = -i4 -r4

CPP_FLAGS = -C -P -D$(BYTE_ORDER) -DLINUX
INC_FLAGS =
LDFLAGS   = -Wl,-noinhibit-exec 
FFLAGS    = -O3 -xW -fp-model precise -ftz -assume byterecl -convert big_endian -fpe0 $(DEBUG) -DLINUX
CFLAGS    = -O0 -DLINUX
ARFLAGS   =

FFLAGS_CRTM = -c $(FDEBUG) -checkbound -convert big_endian -e03 -free -assume byterecl -fp-stack-check -mieee-fp -pg
FL_CRTM     = -pg

