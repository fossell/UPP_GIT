###########################################################
# This file defines the compilation, link, and archive flags for 
# supported systems.  Each record entry should follow the same
# format
###########################################################
#ARCH	AIX  #serial
#
SFC     = xlf_r 
SF90    = xlf90  -qfree
SCC     = xlc_r

DM_FC   = mpxlf_r  
DM_F90  = mpxlf_r  -qfree
DM_CC   = mpxlc_r

FC      = CONFIGURE_FC
F90     = CONFIGURE_F90
CC      = CONFIGURE_CC
CPP     = /usr/bin/cpp

LINUX_OBJ =
BYTE_ORDER = BIG_ENDIAN
FFLAGS_I8R8   = -qintsize=8 -qrealsize=8
FFLAGS_I4R8   = -qintsize=4 -qrealsize=8
FFLAGS_I4R4   = -qintsize=4 -qrealsize=4

FDEBUG  = -g
CDEBUG  =

CPP_FLAGS=
INC_FLAGS=
LDFLAGS =
FFLAGS  = -O $(FDEBUG) -qnosave -qarch=auto -qflttrap=zerodivide:enable -qsigtrap -C -qinitauto=FF911299 -q64 -C -qfullpath
CFLAGS  = -DIBM4 -DVERBOSE -q64 -C -qfullpath
ARFLAGS =

FFLAGS_CRTM = -c -qcheck -qdbg -qextchk -qfloat=nomaf:rndsngl -qflttrap=ov:zero:en \
              -qinitauto -qhalt=W -qmaxmem=-1 -qsuffix=f=f90:cpp=F90 -pg
FL_CRTM     =

###########################################################
#ARCH	Linux i486 i586 i686, PGI compiler #serial dmpar
#
SFC   = pgf90
SF90  = pgf90 -Mfree
SCC   = pgcc

DM_FC  = mpif90 -f90=pgf90
DM_F90 = mpif90 -Mfree -f90=pgf90
DM_CC  = mpicc 

FC    = CONFIGURE_FC
F90   = CONFIGURE_F90
CC    = CONFIGURE_CC
CPP   = /lib/cpp 

LINUX_OBJ =
BYTE_ORDER = LITTLE_ENDIAN
FFLAGS_I8R8   = -i8 -r8
FFLAGS_I4R8   = -i4 -r8
FFLAGS_I4R4   = -i4 -r4

FDEBUG  = -g
CDEBUG  =

CPP_FLAGS = -C -P -D$(BYTE_ORDER) -DLINUX
INC_FLAGS =
LDFLAGS   = -Wl,-noinhibit-exec -Kieee
FFLAGS    = -O0 $(FDEBUG) -Kieee -pc 32 -Ktrap=fp -C -DLINUX -byteswapio
CFLAGS    = -O0 -DLINUX
ARFLAGS   =

FFLAGS_CRTM = -c -g -byteswapio -Ktrap=ovf,divz -Mchkstk -Mdclchk\
              -Minform,inform -Mnosave -Mref_externals -Kieee -pg
FL_CRTM     = -Kieee -pg

