FFLAGS_I4R4   = -i4 -r4

FDEBUG  = -g -traceback
CDEBUG  =

CPP_FLAGS = -C -P -D$(BYTE_ORDER) -DLINUX
LDFLAGS   = -Wl,-noinhibit-exec 
FFLAGS    = -O3 -xW -fp-model precise -ftz  -assume byterecl -convert big_endian -fpe0 $(FDEBUG) -DLINUX
CFLAGS    = -O0 -DLINUX
ARFLAGS   =

FFLAGS_CRTM = -c $(FDEBUG) -checkbound -convert big_endian -e03 -free -assume byterecl -fp-stack-check -mieee-fp -pg
FL_CRTM     = -pg

###########################################################
#ARCH	Linux i486 i586 i686, gfortran compiler # serial dmpar
#
SFC      = gfortran
SF90     = gfortran -ffree-form
SCC      = gcc

DM_FC    = mpif90 -f90=$(SFC)
DM_F90   = mpif90 -f90=$(SF90)
DM_CC    = mpicc -cc=$(SCC)

FC       = CONFIGURE_FC
F90      = CONFIGURE_F90
CC       = CONFIGURE_CC
CPP      = /lib/cpp

LINUX_OBJ  = TIMEF.o
BYTE_ORDER = LITTLE_ENDIAN
FFLAGS_I8R8   = -i8 -r8
FFLAGS_I4R8   = -i4 -r8
FFLAGS_I4R4   = -i4 -r4

FDEBUG  = -g -ffpe-trap=overflow,zero
CDEBUG  =

CPP_FLAGS = -C -P -D$(BYTE_ORDER) -DLINUX
INC_FLAGS =
LDFLAGS  = -Wl,-noinhibit-exec
FFLAGS   = -fconvert=big-endian -fno-second-underscore -fno-range-check -frecord-marker=4 -DLINUX $(FDEBUG)
CFLAGS   = -O0 -DLINUX -D_OPENMP
ARFLAGS  =

FFLAGS_CRTM = -c $(FDEBUG) -fconvert=big_endian -fno-second-underscore -frecord-marker=4 \
              -ggdb -statis -Wall -pg
FL_CRTM     = -pg

